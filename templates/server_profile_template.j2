  name: "{{ ov_hostname }}"
  serverHardwareName: "{{ ov_hostname }}.hpintelco.org"
  serverHardwareTypeName: "{{ server_hardware_type_name }}"
  managementProcessor: 
    manageMp: false
  bios:
    manageBios: false
  boot:
    order:
      - CD
      - USB
      - HardDisk
      - PXE
    manageBoot: false
  bootMode:
    manageMode: true
    mode: "BIOS"
    pxeBootPolicy: null
    secureBoot: "Unmanaged"
  localStorage:
    controllers: []
    reapplyState: NotApplying
    sasLogicalJBODs: []
  firmware:
{% if firmware %}
    firmwareActivationType: NotScheduled
{#   firmwareBaselineName: "{{ ov_spp_name }}"
#}
    firmwareBaselineUri: "/rest/firmware-drivers/P64606_001_gen10spp-2023_09_00_00-SPP2023090000_2023_0902_19"
{#
    # Specify the firmware update mode.  Allowed values:
    # FirmwareAndOSDrivers - Updates the firmware and OS drivers without powering down the server hardware using Smart Update Tool.
    # FirmwareOnly - Updates the firmware without powering down the server hardware using Smart Update Tool.
    # FirmwareOnlyOfflineMode - Manages the firmware through HPE OneView. Selecting this option requires the server hardware to be powered down.
    #}
    firmwareInstallType: FirmwareOnlyOfflineMode 
    forceInstallFirmware: false
    manageFirmware: true
{% else %}
    manageFirmware: false
{% endif %}
  osDeploymentSettings: null